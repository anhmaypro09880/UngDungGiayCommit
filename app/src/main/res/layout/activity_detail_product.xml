<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="306dp"
        android:layout_height="200dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/eeclip" />

    <ImageView
        android:id="@+id/imgShoesDetail"
        android:layout_width="240dp"
        android:layout_height="126dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/giay_removebg_preview" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="414dp"
        android:layout_height="445dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="-1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/description" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:srcCompat="@drawable/evalute" />

    <TextView
        android:id="@+id/txtDanhGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="4.5"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtGiaThanhDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="5dp"
        android:text="5.000.000"
        android:textColor="#1F7827"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtTenSanPhamDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="10dp"
        android:text="Giày sneaker"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/txtSoLuong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="1"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgIncrease"
        app:layout_constraintStart_toStartOf="@+id/imgReduce"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imgIncrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:srcCompat="@drawable/increase_big" />

    <ImageView
        android:id="@+id/imgReduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:srcCompat="@drawable/reduce_big" />

    <TextView
        android:id="@+id/txtMoTa"
        android:layout_width="332dp"
        android:layout_height="114dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="15dp"
        android:text="Mua giày thể thao sneakers chính hãng, chất lượng. Shopee giao hàng nhanh - thanh toán linh dễ dàng. Mua giày thể thao sneakers tại Shopee ..."
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/txtTenSanPhamDetail" />

    <ImageView
        android:id="@+id/imgHinh2"
        android:layout_width="98dp"
        android:layout_height="79dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMoTa"
        app:srcCompat="@drawable/diference_image1" />

    <ImageView
        android:id="@+id/imgHinh3"
        android:layout_width="98dp"
        android:layout_height="79dp"
        android:layout_marginStart="21dp"
        app:layout_constraintStart_toEndOf="@+id/imgHinh2"
        app:layout_constraintTop_toBottomOf="@+id/txtMoTa"
        app:srcCompat="@drawable/diference_image2" />

    <ImageView
        android:id="@+id/imgHinh4"
        android:layout_width="98dp"
        android:layout_height="79dp"
        android:layout_marginStart="21dp"
        app:layout_constraintStart_toEndOf="@+id/imgHinh3"
        app:layout_constraintTop_toBottomOf="@+id/txtMoTa"
        app:srcCompat="@drawable/diference_iamge3" />

    <ImageView
        android:id="@+id/idimgcart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgHinh2"
        app:srcCompat="@drawable/cart" />

    <Button
        android:id="@+id/btnMuaNgay"
        android:layout_width="247dp"
        android:layout_height="43dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/list_button"
        android:text="Mua ngay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgHinh3"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn39"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"

        android:layout_marginTop="20dp"
        android:background="@drawable/list_size39"
        android:text="39"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgHinh2"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn40"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/list_size"
        android:text="40"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgHinh2"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn41"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/list_size"
        android:text="41"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgHinh2"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn42"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/list_size"
        android:text="42"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgHinh2"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn43"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/list_size"
        android:layout_marginStart="340dp"
        android:layout_marginTop="20dp"
        android:text="43"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgHinh2"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>